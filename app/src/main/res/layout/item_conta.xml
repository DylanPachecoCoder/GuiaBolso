<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_conta_apelido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Itaú"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/item_conta_agencia_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_conta_agencia_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agência: "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/item_conta_numero_conta_layout"
                app:layout_constraintStart_toStartOf="@+id/item_conta_apelido"
                app:layout_constraintTop_toBottomOf="@+id/item_conta_apelido" />

            <TextView
                android:id="@+id/item_conta_numero_conta_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Conta: "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_conta_agencia_layout"
                app:layout_constraintTop_toBottomOf="@+id/item_conta_agencia_layout"
                app:layout_constraintVertical_bias="0.09" />

            <TextView
                android:id="@+id/item_conta_textview_agencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0001"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/item_conta_agencia_layout"
                app:layout_constraintStart_toEndOf="@+id/item_conta_agencia_layout" />

            <TextView
                android:id="@+id/item_conta_textview_numero_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="00000-1"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="@+id/item_conta_numero_conta_layout"
                app:layout_constraintEnd_toEndOf="@+id/item_conta_textview_agencia"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_conta_textview_agencia"
                app:layout_constraintTop_toBottomOf="@+id/item_conta_textview_agencia" />

            <TextView
                android:id="@+id/item_conta_textview_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="R$ 5000.00"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.509" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>